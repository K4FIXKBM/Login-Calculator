<CustomTextInput@TextInput>:
    font_size: self.height - 8
    size_hint: 1.0, .55
    padding:[ 20 , (self.height-self.line_height)/2 ]
<CustomLoginTextInput@TextInput>:
    font_size:50
    size_hint: 1.0,None
    height:100
    padding: [ 20, (self.height-self.line_height)/2]


<RegistrationScreen>:
    BoxLayout:
        orientation:'vertical'
        size: root.width,root.height
        padding: 50

        canvas.before:
            Color: 
                rgba:41/255.0,176/255.0,255/255.0,1
            Rectangle:
                size: self.size
        Image:
            source: "cute.jpg"

        BoxLayout:
            orientation:"vertical"
            padding:20

            CustomTextInput:
                id: username
                hint_text:"enter your username..."
        BoxLayout:
            orientation:"vertical"
            padding:20
            CustomTextInput:
                id: password
                password: True
                hint_text:"enter your password..."
        BoxLayout:
            orientation:"vertical"
            padding:20
            CustomTextInput:
                id: confirm_pass
                password:True
                hint_text:"confirm password..."
        
        Button:
            text: "Register"
            size_hint:None,None
            size:200,50
            pos_hint:{'center_x':0.5}
            background_color:100/255.0,100/255.0,255/255.0,1
            background_normal: ""
            on_press:root.registerUser()
        
        BoxLayout:
            orientation: "horizontal"
            pos_hint:{"center_x": 0.5, "center_y": 0.5}
            Label:
                text:"do you have already an account?"
                font_size:20
                font: "bold"
            Button:
                text: "login"
                size:120,40
                size_hint: None, None
                on_press: root.goToLoginScreen()
<LoginScreen>:
    BoxLayout:
        orientation:'vertical'
        size: root.width,root.height
        padding: 50

        canvas.before:
            Color: 
                rgba:0,1,0,1
            Rectangle:
                size: self.size
        Image:
            source: "calcu.png"        

        CustomLoginTextInput:
            id: username
            hint_text:"Enter your username ..."
        CustomLoginTextInput:
            id: password
            password: True
            hint_text:"Enter your password ..."




        Button:
            text:'Login'
            size_hint: None, None
            size: 200,50
            pos_hint: { 'center_x':0.5 }
            background_color: 100/250.0,100/255.0,255/255.0, 1
            background_normal:""
            on_press:
                root.checklogin()
        BoxLayout:
            orientation: "horizontal"
            pos_hint:{"center_x": 0.5,"center_y": 0.5}
        Label:
            text: "Do you want an new account?"
            font_size: 20
            font:"bold"
        Button:
            text: "Register"
            size:120,40
            size_hint: None,None
            on_press: root.goToRegisterPage()
  
<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width,root.height

        Label:
            id:name
            text:"MenuScreen"
            